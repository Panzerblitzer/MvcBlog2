<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/default.css")" rel="stylesheet" type="text/css" />
    <!--Goodreads-->
                  <style type="text/css" media="screen">
                .gr_grid_container { /* customize grid container div here. eg: width: 500px; */ } 
                .gr_grid_book_container { /* customize book cover container div here */ 
                  float: left; 
                  width: 39px; 
                  height: 60px; 
                  padding: 0px 0px;
                  overflow: hidden; 
                }
              </style>
    <!--End Goodreads-->
    @RenderSection("Stylesheets", required: false)

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
        <script language="javascript" type="text/javascript">
    // <![CDATA[

                function maincol_onclick() {

                }

    // ]]>
        </script>
    @RenderSection("Javascripts", required: false)
</head>
<body>
<div id="pagewidth" >

	<div id="header"></div>

	<div id="wrapper" class="clearfix">

		<div id="twocols"> 

			<div id="maincol" onclick="return maincol_onclick()">
            
             <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>

            @*Main Content Body*@
            
             @RenderBody()

            </div>

			<div id="rightcol"> <h2>The Right Column</h2>                    
            <!--Goodreads-->

              <div id="gr_grid_widget_1343356003">
                <!-- Show static html as a placeholder in case js is not enabled - javascript include will override this if things work -->
                    <h2>
              <a href="http://www.goodreads.com/review/list/6792960-eric-miller?shelf=currently-reading&utm_medium=api&utm_source=grid_widget" style="text-decoration: none;">Eric's Currently Reading List</a>
            </h2>
          <div class="gr_grid_container">
            <div class="gr_grid_book_container"><a href="http://www.goodreads.com/book/show/175983.Memories_of_Ice" title="Memories of Ice (Malazan Book of the Fallen, #3)"><img alt="Memories of Ice" border="0" src="http://photo.goodreads.com/books/1316729348s/175983.jpg" /></a></div>
            <div class="gr_grid_book_container"><a href="http://www.goodreads.com/book/show/2434511.Dreadnought" title="Dreadnought: Britain, Germany and the Coming of the Great War"><img alt="Dreadnought: Britain, Germany and the Coming of the Great War" border="0" src="http://photo.goodreads.com/books/1337906906s/2434511.jpg" /></a></div>
            <div class="gr_grid_book_container"><a href="http://www.goodreads.com/book/show/1507375.Malleus" title="Malleus"><img alt="Malleus" border="0" src="http://photo.goodreads.com/books/1184430416s/1507375.jpg" /></a></div>
            <div class="gr_grid_book_container"><a href="http://www.goodreads.com/book/show/8181143-the-strange-affair-of-spring-heeled-jack" title="The Strange Affair of Spring Heeled Jack (Burton & Swinburne, #1)"><img alt="The Strange Affair of Spring Heeled Jack" border="0" src="http://photo.goodreads.com/books/1315596474s/8181143.jpg" /></a></div>
            <div class="gr_grid_book_container"><a href="http://www.goodreads.com/book/show/8115097-programming-entity-framework" title="Programming Entity Framework: Building Data Centric Apps with the ADO.NET Entity Framework"><img alt="Programming Entity Framework: Building Data Centric Apps with the ADO.NET Entity Framework" border="0" src="http://photo.goodreads.com/books/1328835024s/8115097.jpg" /></a></div>
            <br style="clear: both"/><br/><a href="http://www.goodreads.com/user/show/6792960-eric-miller" class="gr_grid_branding" style="font-size: .9em; color: #382110; text-decoration: none; float: right; clear: both">Eric Miller's favorite books »</a>
          <noscript><br/>Share <a href="http://www.goodreads.com">book reviews</a> and ratings with Eric, and even join a <a href="http://www.goodreads.com/group/">book club</a> on Goodreads.</noscript>
          </div>

              </div>
              <script src="http://www.goodreads.com/review/grid_widget/6792960.Eric's%20Currently%20Reading%20List?cover_size=small&hide_link=&hide_title=&num_books=5&order=a&shelf=currently-reading&sort=date_added&widget_id=1343356003" type="text/javascript" charset="utf-8"></script>
            
            <!--End Goodreads-->       
            </div>

		</div> 

		<div id="leftcol"> @{ Html.RenderAction("NavList", "LeftNav"); }</div>

	</div>

	<div id="footer">
        <p class="white">A Whoville Production</p>
        <p class="copy">&copy; 2012 MtCrumpit.Net</p>
        <div id="logindisplay">
            @Html.Partial("_LogOnPartial")
        </div>
    </div>

	</div>
</body>
</html>
